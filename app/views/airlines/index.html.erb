<div class="headline">
<h1>All Airlines</h1>
<p>click on image to enlarge</p>
</div>

 <%= image_tag "maxresdefault.jpg", :class => 'bgimg' %>

<% @airlines.each do |airline| %>
<div class="inputbox">
 <%= link_to image_tag(airline.image, :class => 'thumb'), airline unless airline.image.nil?%>

 <ul>
   <li><em>Name: </em><%= airline.name %></li>
   <li><em>Location: </em><%= airline.location %></li>
 <li><em>Fuel used per year: </em><%= number_with_delimiter airline.fuel, :delimiter => ',' %> gallon</li>
   <li><em>Total planes: </em><%= airline.num_plane %></li>
   <li><em>Plane type: </em><%= airline.type_plane %></li>
 </ul>
</div>
<% end %>
