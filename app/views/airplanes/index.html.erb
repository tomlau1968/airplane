<div class="headline">
  <h1>All Airplanes</h1>
  <p>click on image to enlarge</p>
</div>
 <%= image_tag "turbine-jet-engine_small.jpg", :class => 'bgimg' %>


<% @airplanes.each do |airplane| %>
<div class="inputbox">
 <%= link_to image_tag(airplane.image, :class => 'thumb'), airplane unless airplane.image.nil?%>

 <ul>
   <li><em>Name: </em><%= airplane.name %></li>
   <li><em>Engine: </em><%= airplane.engine %></li>
   <li><em>Top Speed: </em><%=  airplane.speed %></li>
   <li><em>Passenger: </em><%= airplane.passenger %></li>
   <li><em>Weight: </em><%= number_with_delimiter airplane.weight, :delimiter => ',' %> ton</li>
 </ul>
</div>


<% end %>
