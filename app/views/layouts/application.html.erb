<!DOCTYPE html>
<html>
<head>
  <title>Avation</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="container">
    <nav >
      <%= link_to 'Home', root_path %>
      <%= link_to 'All Airplanes', airplanes_path%>
      <%= link_to "All Airlines", airlines_path%>
      <% if @current_user.present? %>
      <%= link_to 'New Airplane', new_airplane_path %>
      <%= link_to "New Airline", new_airline_path %>
      <%= link_to "Edit profile", edit_user_path(@current_user) %>

      <%= link_to "Sign out #{ @current_user.email }", login_path, :method => 'delete' %>
      <% else %>
      <%= link_to 'Sign up', new_user_path %>
      <%= link_to 'Sign in', login_path %>
      <% end %>
    </nav>
  </div>
  <%= yield %>
</body>

</html>
